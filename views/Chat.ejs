                  <div class="card p-3 " style="max-height: 700px; overflow-y: auto;">
                    <!-- Chat UI -->
                    <div class="row">
                      <div class="col col-3">
                        <form id="message-form" action="/supervisor/students/message" method="post">
                          <div class="card" style="height: 500px; overflow-y: auto;">
                            <p class="mt-3" style="text-align: center;"><strong>STUDENTS</strong></p>
                            <ul id="student-list" style="padding-left: 5px;">
                              <% students.forEach((student) => { %>
                                <li style="list-style-type:none;" data-studentid="<%= student.ID %>">
                                  <%= student.fName %> <%= student.lName %>
                                </li>
                              <% }) %>
                            </ul>
                          </div>
                      </div>
                      <div class="col col-9" >
                       <div class="card" id="messages" style="height: 500px; overflow-y: auto;">
                      //chat goes here
                      
                      
                      </div>
                          <div class="input-group " style="margin-top: 10px;">
                          <input type="text" name="message" class="form-control" id="message-input" autocomplete="off">
                          <!-- <button class="btn btn-outline-secondary" >Send</button> -->
                          <button class="btn btn-success input-group-text"  style="color: black;">send</button>
                        </form>

                      </div>

                    </div>
                    
                    
                    
                    <!-- Socket.io logic -->
                    <script>
                      // Connect to the Socket.io server
                      const socket = io();
            
                      // Handle click event on list items
                      document.getElementById('student-list').addEventListener('click', async (event) => {
  const selectedStudent = event.target.closest('li');

  if (selectedStudent) {
    const studentId = selectedStudent.getAttribute('data-studentid');
    const response = await fetch(`/supervisor/students/message/chat/${studentId}`);
    const { messages } = await response.json();
    const input = document.getElementById('message-input');
                          input.focus();
                          input.setAttribute('data-studentid', studentId);

    // Remove existing messages from the UI
    const messagesContainer = document.getElementById('messages');
    messagesContainer.innerHTML = '';

    // Render the fetched messages
    messages.forEach((message) => {
  const messageElement = document.createElement('li');
  if (message.sender === 'supervisor') {
    messageElement.classList.add('sent');
    messageElement.textContent = `You: ${message.message}`;
  } else {
    messageElement.classList.add('received');
    messageElement.textContent = `Student: ${message.message}`;
  }
  messagesContainer.appendChild(messageElement);
});

    // Remove the 'active' class from all list items
    const listItems = document.querySelectorAll('#student-list li');
    listItems.forEach((item) => {
      item.classList.remove('active');
    });

    // Add the 'active' class to the clicked list item
    selectedStudent.classList.add('active');


    let studentRoom = 'supervisor_<%= user.ID %>_student_<%=studentId %>';
                        socket.emit('join room', { room: studentRoom });
  }
});

            
                      // Join the supervisor's room for each student
                      // <% students.forEach((student) => { %>
                      //   let studentRoom = 'supervisor_<%= user.ID %>_student_<%= student.ID %>';
                      //   socket.emit('join room', { room: studentRoom });
                      // <% }) %>
            
                      
                      // Handle received chat messages
                      socket.on('chat message', (message) => {
                        const { sender, message: msg } = message;
                        const messageElement = document.createElement('li');
                        // Assign class based on the sender
                      if (sender === 'supervisor') {
                        messageElement.classList.add('sent');
                      } else {
                        messageElement.classList.add('received');
                      }
                      messageElement.textContent = `${sender}: ${msg}`;
                        document.getElementById('messages').appendChild(messageElement);
                      });
            
                      // Handle form submission
                      document.getElementById('message-form').addEventListener('submit', (event) => {
                        event.preventDefault();
                        const input = document.getElementById('message-input');
                        const studentId = input.getAttribute('data-studentid');
                        const message = input.value.trim();
                        
                        if (message && studentId) {
                          // Emit the chat message to the specific student's room
                          const studentRoom = 'supervisor_<%= user.ID %>_student_' + studentId;
                          const studentid= studentId
                          socket.emit('chat message', { sender: 'supervisor', room: studentRoom, message ,studentid});
                          
                          // Display the sent message in the chat UI
                          const messageElement = document.createElement('li');
                          messageElement.classList.add('sent');
                          messageElement.textContent = `You: ${message}`;
                          document.getElementById('messages').appendChild(messageElement);
                          
                          input.value = '';
                        }
                      });
                    </script>
