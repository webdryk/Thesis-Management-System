<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOD Dashboard</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
        .sidebar {
            transition: all 0.3s ease;
        }
        .sidebar-collapsed {
            transform: translateX(-100%);
        }
        @media (min-width: 1024px) {
            .sidebar-collapsed {
                transform: translateX(0);
            }
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Mobile Sidebar Toggle -->
    <button id="sidebarToggle" class="lg:hidden fixed top-4 left-4 z-50 p-2 rounded-md bg-white shadow-md">
        <i class="fas fa-bars text-gray-600"></i>
    </button>

    <!-- Sidebar -->
    <aside id="sidebar" class="sidebar fixed top-0 left-0 z-40 w-64 h-screen bg-white shadow-lg transition-transform duration-300 ease-in-out">
        <div class="h-full flex flex-col">
            <!-- Sidebar Header -->
            <div class="p-4 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-800">HOD Dashboard</h2>
            </div>
            
            <!-- Sidebar Menu -->
            <nav class="flex-1 overflow-y-auto p-4">
                <ul class="space-y-2">
                    <li>
                        <a href="/HOD" class="flex items-center p-3 rounded-lg text-white bg-blue-600">
                            <i class="fas fa-gauge mr-3"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/HOD/thesis" class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-book mr-3"></i>
                            <span>Thesis</span>
                        </a>
                    </li>
                    <li>
                        <a href="/HOD/students" class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-users mr-3"></i>
                            <span>Students</span>
                        </a>
                    </li>
                    <li>
                        <a href="/HOD/HODapproval" class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-lock mr-3"></i>
                            <span>Approval</span>
                        </a>
                    </li>
                    <li>
                        <a href="/HOD/Report" class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-marker mr-3"></i>
                            <span>Report</span>
                        </a>
                    </li>
                </ul>
            </nav>
            
            <!-- Sidebar Footer -->
            <div class="p-4 border-t border-gray-200">
                <a href="/logout" class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-gray-100">
                    <i class="fas fa-right-from-bracket mr-3"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="lg:ml-64">
        <!-- Top Navigation -->
        <header class="bg-white shadow-sm">
            <div class="flex justify-between items-center p-4">
                <div class="flex items-center">
                    <!-- Welcome Message -->
                    <div class="relative group">
                        <button class="flex items-center space-x-2 focus:outline-none">
                            <span class="text-gray-600">Welcome,</span>
                            <span class="font-medium text-blue-600"><%- user.fName%></span>
                            <i class="fas fa-chevron-down text-xs text-gray-500"></i>
                        </button>
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 hidden group-focus-within:block hover:block">
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Profile</a>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Settings</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Dashboard Content -->
        <main class="p-6">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">Dashboard Overview</h1>
            
            <!-- Cards Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Students Card -->
                <a href="/HOD/students" class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="h-40 bg-gradient-to-r from-blue-500 to-blue-400 flex items-center justify-center">
                        <i class="fas fa-users text-white text-5xl"></i>
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800">Students</h3>
                        <p class="text-gray-600">Manage student records</p>
                    </div>
                </a>
                
                <!-- Thesis Card -->
                <a href="/HOD/thesis" class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="h-40 bg-gradient-to-r from-purple-500 to-purple-400 flex items-center justify-center">
                        <i class="fas fa-book text-white text-5xl"></i>
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800">Thesis</h3>
                        <p class="text-gray-600">Thesis management</p>
                    </div>
                </a>
                
                <!-- Approval Card -->
                <a href="/HOD/HODapproval" class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="h-40 bg-gradient-to-r from-green-500 to-green-400 flex items-center justify-center">
                        <i class="fas fa-lock text-white text-5xl"></i>
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800">Approval</h3>
                        <p class="text-gray-600">Review and approve requests</p>
                    </div>
                </a>
                
                <!-- Report Card -->
                <a href="/HOD/report" class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="h-40 bg-gradient-to-r from-orange-500 to-orange-400 flex items-center justify-center">
                        <i class="fas fa-marker text-white text-5xl"></i>
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800">Report</h3>
                        <p class="text-gray-600">Generate reports</p>
                    </div>
                </a>
            </div>
        </main>
    </div>

    <script>
        // Mobile sidebar toggle
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('sidebar-collapsed');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            
            if (window.innerWidth < 1024 && 
                !sidebar.contains(event.target) && 
                event.target !== sidebarToggle && 
                !sidebarToggle.contains(event.target)) {
                sidebar.classList.add('sidebar-collapsed');
            }
        });
    </script>
</body>
</html>