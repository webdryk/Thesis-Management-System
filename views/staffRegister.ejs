  </div>
</div>

<script>
  const facultySelect = document.getElementById('faculty');
  const departmentSelect = document.getElementById('department');

  // Define a JavaScript object to map faculties to their respective departments.
  const departmentData = {
    "FACULTY OF ENGINEERING": [
      "Mechanical Engineering Department",
      "Electrical/Electronic Engineering Department",
      "Civil Engineering Department"
    ],
    "FACULTY OF BUILT ENVIRONMENT": [
      "Department of Interior Design and Upholstery Technology",
      "Department of Building Technology"
    ],
    "FACULTY OF APPLIED SCIENCES": [
      "Applied Mathematics and Statistics",
      "Science Laboratory Technology",
      "Computer Science",
      "Medical Laboratory Technology"
    ],
    "FACULTY OF APPLIED ART": [
      "Department of Hotel Catering & Institutional Management (HCIM)",
      "Fashion Design & Textile Department",
      "Department of Liberal Studies and Communications Technology"
    ],
    "FACULTY OF BUSINESS": [
      "Accountancy and Finance",
      "Management and Public Administration",
      "Procurement and Supply Chain Management",
      "Marketing"
    ]
  };

  // Function to update the department options based on the selected faculty.
  function updateDepartmentOptions() {
    const selectedFaculty = facultySelect.value;
    departmentSelect.innerHTML = '<option data-hidden="true"></option>';

    if (departmentData[selectedFaculty]) {
      departmentData[selectedFaculty].forEach((department) => {
        const option = document.createElement('option');
        option.value = department;
        option.textContent = department;
        departmentSelect.appendChild(option);
      });
    }
  }

  // Add an event listener to the faculty select to update the department options.
  facultySelect.addEventListener('change', updateDepartmentOptions);

  // Initialize the department options based on the default faculty.
  updateDepartmentOptions();
</script>
