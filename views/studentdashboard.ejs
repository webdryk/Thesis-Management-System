<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Dashboard</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
</head>
<body class="bg-gray-100">

<!-- Sidebar -->
<aside class="fixed top-0 left-0 z-40 w-64 h-screen bg-white shadow-lg hidden lg:block">
  <div class="pt-16 px-4 space-y-2">
    <a href="/student" class="block py-2 px-4 rounded hover:bg-gray-200">Main Dashboard</a>
    <a href="/student" class="block py-2 px-4 rounded bg-gray-100 shadow">
      <i class="fa fa-gauge me-2"></i> Dashboard
    </a>
    <a href="/student/thesis" class="block py-2 px-4 rounded hover:bg-gray-200">
      <i class="fa fa-book me-2"></i> Thesis
    </a>
    <a href="/student/myproject/<%- user.ID %>" class="block py-2 px-4 rounded hover:bg-gray-200">
      <i class="fa fa-book-open-reader me-2"></i> My Project
    </a>
    <a href="/student/message" class="block py-2 px-4 rounded hover:bg-gray-200">
      <i class="fa fa-rocketchat me-2"></i> Messages
    </a>
    <a href="/plagiarism" class="block py-2 px-4 rounded hover:bg-gray-200">
      <i class="fa fa-spell-check me-2"></i> Plagiarism
    </a>
    <a href="/logout" class="block py-2 px-4 rounded hover:bg-gray-200">
      <i class="fa fa-right-from-bracket me-2"></i> LogOut
    </a>
  </div>
</aside>

<!-- Navbar -->
<nav class="fixed top-0 left-0 w-full bg-white shadow flex items-center justify-between px-4 py-3 z-50 lg:pl-64">
  <button class="lg:hidden text-xl" onclick="document.querySelector('aside').classList.toggle('hidden')">
    <i class="fas fa-bars"></i>
  </button>
  <div class="text-right">
    <span class="mr-2">Welcome,</span>
    <div class="inline-block relative">
      <button class="dropdown-toggle"><%- user.fName %> <i class="fa fa-chevron-down"></i></button>
      <ul class="absolute right-0 mt-2 w-40 bg-gray-800 text-white rounded shadow hidden dropdown-menu">
        <li><a href="#" class="block px-4 py-2 hover:bg-gray-700">Profile</a></li>
        <li><a href="#" class="block px-4 py-2 hover:bg-gray-700">Settings</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Main content -->
<main class="pt-20 lg:ml-64 px-4">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
    <a href="/student/thesis" class="bg-white rounded shadow p-4 hover:shadow-md transition duration-200">
      <img src="images/thesis.png" alt="Thesis" class="w-full h-40 object-cover rounded" />
      <p class="mt-2 font-semibold">Thesis</p>
    </a>

    <a href="/student/myproject/<%- user.ID %>" class="bg-white rounded shadow p-4 hover:shadow-md transition duration-200">
      <img src="images/project.png" alt="Project" class="w-full h-40 object-cover rounded" />
      <p class="mt-2 font-semibold">My Project</p>
    </a>

    <a href="/student/message" class="bg-white rounded shadow p-4 hover:shadow-md transition duration-200">
      <img src="images/message.jpeg" alt="Messages" class="w-full h-40 object-cover rounded" />
      <p class="mt-2 font-semibold">Messages</p>
    </a>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center mt-6">
    <a href="/plagiarism" class="bg-white rounded shadow p-4 hover:shadow-md transition duration-200">
      <img src="images/plagiarism.png" alt="Plagiarism" class="w-full h-40 object-cover rounded" />
      <p class="mt-2 font-semibold">Check Plagiarism</p>
    </a>
  </div>
</main>

<script>
  // Toggle dropdown
  document.querySelectorAll('.dropdown-toggle').forEach(btn => {
    btn.addEventListener('click', () => {
      btn.nextElementSibling.classList.toggle('hidden');
    });
  });
</script>

</body>
</html>
