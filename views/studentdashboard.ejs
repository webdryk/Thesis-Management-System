<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body class="bg-gray-50">
    <!-- Sidebar -->
    <div class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-lg transform transition-transform duration-200 ease-in-out lg:translate-x-0 -translate-x-full" id="sidebar">
        <div class="flex flex-col h-full py-4 px-3">
            <div class="space-y-2">
                <a href="/student" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100">
                    <span>Main dashboard</span>
                </a>
                <a href="/student" class="flex items-center p-2 text-white bg-blue-600 rounded-lg">
                    <i class="fas fa-gauge mr-3"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/student/thesis" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100">
                    <i class="fas fa-book mr-3"></i>
                    <span>Thesis</span>
                </a>
                <a href="/student/myproject/<%- user.ID %>" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100">
                    <i class="fas fa-book-open-reader mr-3"></i>
                    <span>My Project</span>
                </a>
                <a href="/student/message" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100">
                    <i class="fas fa-comment mr-3"></i>
                    <span>Messages</span>
                </a>
                <a href="/plagiarism" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100">
                    <i class="fas fa-spell-check mr-3"></i>
                    <span>Plagiarism</span>
                </a>
                <a href="/logout" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100">
                    <i class="fas fa-right-from-bracket mr-3"></i>
                    <span>LogOut</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <nav class="fixed top-0 left-0 right-0 z-40 bg-white shadow-sm">
        <div class="flex items-center justify-between p-4">
            <button class="lg:hidden text-gray-600" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            
            <div class="flex items-center space-x-4">
                <div class="relative">
                    <span>Welcome, </span>
                    <button class="dropdown-toggle text-blue-600">
                        <%- user.fName%>
                    </button>
                    <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden dropdown-menu">
                        <a href="#" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Profile</a>
                        <a href="#" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Settings</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>


<!-- Main content -->
<main class="pt-20 lg:ml-64 px-4">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
    <a href="/student/thesis" class="bg-white rounded shadow p-4 hover:shadow-md transition duration-200">
      <img src="images/thesis.png" alt="Thesis" class="w-full h-40 object-cover rounded" />
      <p class="mt-2 font-semibold">Thesis</p>
    </a>

    <a href="/student/myproject/<%- user.ID %>" class="bg-white rounded shadow p-4 hover:shadow-md transition duration-200">
      <img src="images/project.png" alt="Project" class="w-full h-40 object-cover rounded" />
      <p class="mt-2 font-semibold">My Project</p>
    </a>

    <a href="/student/message" class="bg-white rounded shadow p-4 hover:shadow-md transition duration-200">
      <img src="images/message.jpeg" alt="Messages" class="w-full h-40 object-cover rounded" />
      <p class="mt-2 font-semibold">Messages</p>
    </a>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center mt-6">
    <a href="/plagiarism" class="bg-white rounded shadow p-4 hover:shadow-md transition duration-200">
      <img src="images/plagiarism.png" alt="Plagiarism" class="w-full h-40 object-cover rounded" />
      <p class="mt-2 font-semibold">Check Plagiarism</p>
    </a>
  </div>
</main>

<script>
  // Toggle dropdown
  document.querySelectorAll('.dropdown-toggle').forEach(btn => {
    btn.addEventListener('click', () => {
      btn.nextElementSibling.classList.toggle('hidden');
    });
  });
</script>

</body>
</html>
