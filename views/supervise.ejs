                                    <button type="submit" class="btn bg-primary ms-5">Done</a>

                                  </form>
                                      
                              </li>
                              <li class="mt-3 ">
                                    
                                <form action="/chapter" method="post">
                                  <h5 style="display: inline;">Chapter 3</h5> 
                                  <input type="hidden" name="studentID" value="<%- studentdetail.ID %>">
                                  <input type="text" name="chapter" value="chapter 3" hidden>
                                  <button type="submit" class="btn bg-primary ms-5">Done</a>

                                </form>
                                    
                            </li>
                            <li class="mt-3 ">
                                    
                              <form action="/chapter" method="post">
                                <h5 style="display: inline;">Chapter 4</h5> 
                                <input type="hidden" name="studentID" value="<%- studentdetail.ID %>">
                                <input type="text" name="chapter" value="chapter 4" hidden>
                                <button type="submit" class="btn bg-primary ms-5">Done</a>

                              </form>
                                  
                          </li>
                          <li class="mt-3 ">
                                    
                            <form action="/chapter" method="post">
