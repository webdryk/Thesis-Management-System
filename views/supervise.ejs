<main style="margin-top: 58px;">
  <div class="container pt-4  ms-5 me-5 text-center">
                    
                    <div class="row mt-5 " style="margin-right: 50px;">
                        <div class="col-md-4   justify-content-center">
                            <div class="card text-bg-primary mb-3 " >
                                <div class="card-header">Project Phase</div>
                                <div class="card-body ">
                                  
                                  <p class="card-text">
                                    Student: <%- studentdetail.fName +" " + studentdetail.lName%> <br>
                                    Thesis Status: <%- studentdetail.thesisStatus%>
                                  
                                  </p>
                                  <form action="/supervisor/student/message/<%- studentdetail.ID %>" method="get" style="display: inline; margin-right: 5px;">
                                    
                                    <button type="submit" id="approve" class="btn btn-outline-warning" >Message</button>
                                  </form> 
                                  
                                </div>
                            </div>
                        </div>

                        <div class="col">
                          <div class="card me-5">
                            <div class="card-body">
                              <h5>Upload documentation to Student</h5>
                              <br>
                                <!-- Add the following code to display the flash message -->
                                <% if (messages) { %>
                                  <div class="alert alert-success mt-3" id="flashMessage">
                                    <%= messages %>
                                  </div>
                                <% } %>

                                <script>
                                  // Function to remove the flash message after 3 seconds
                                  function removeFlashMessage() {
                                    const flashMessage = document.getElementById('flashMessage');
                                    if (flashMessage) {
                                      setTimeout(() => {
                                        flashMessage.style.display = 'none';
                                      }, 1000); // 3 seconds (3000 milliseconds)
                                    }
                                  }
                                
                                  // Call the function when the page is loaded
                                  window.addEventListener('DOMContentLoaded', () => {
                                    removeFlashMessage();
                                  });
                                </script>
                                

                                
                                
                                
                                
                                
                              
                              <ul class="text-danger">
                                <li>Ensure documents are in the correct format (i.e., docx)</li>
                                <li>Ensure documents are named according to thesis chapters (e.g., Chapter one, chapter 2)</li>
                              </ul>
                              <form action="/supervisor/student/upload" method="post" enctype="multipart/form-data">
                                <!-- Add a hidden input field to store the student ID -->
                                <input type="hidden" name="studentID" value="<%- studentdetail.ID %>">
                                <input type="hidden" name="uploaderType" value="supervisor"> <!-- Indicate that the uploader is a supervisor -->
                                <div class="input-group mb-3 mt-5">
                                  <!-- Add the "name" attribute to the file input -->
                                  <input type="file" class="form-control" name="document" id="inputGroupFile02">
                                  <button class="btn btn-success input-group-text" type="submit" style="color: black;">Upload</button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>


                <div class="row mt-5 ms-5" style="margin-right: 50px;">
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                              Chapter Approval
                            </div>
                            <div class="card-body">
                              <ul class="">
                                <li class="mt-3 ">
                                    
                                    <form action="/chapter" method="post">
                                      <h5 style="display: inline;">Chapter 1</h5> 
                                      <input type="hidden" name="studentID" value="<%- studentdetail.ID %>">
                                      <input type="text" name="chapter"value="chapter 1" hidden>
